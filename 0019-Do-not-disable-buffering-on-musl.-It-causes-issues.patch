+++ b/src/basic/fileio.c
@@ -305,9 +305,10 @@ int write_string_file_ts(
                 safe_close(fd);
                 goto fail;
         }
-
+#ifdef __GLIBC__
         if (flags & WRITE_STRING_FILE_DISABLE_BUFFER)
                 setvbuf(f, NULL, _IONBF, 0);
+#endif
 
         r = write_string_stream_ts(f, line, flags, ts);
         if (r < 0)
